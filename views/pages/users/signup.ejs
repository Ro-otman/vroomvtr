<section class="signup-page">
  <div class="signup-card">
    <div class="signup-header">
      <span class="eyebrow">Créer un compte</span>
      <h1>Inscription</h1>
    </div>

    <form action="/auth/register" method="post" class="signup-form">
      <% const errs = (typeof errors !== "undefined" && errors) ? errors : []; %>
      <% const formData = (typeof form !== "undefined" && form) ? form : {}; %>

      <% if (errs.length) { %>
      <div class="form-alert error">
        <ul>
          <% errs.forEach((err) => { %>
          <li><%= err %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <% if (typeof success !== "undefined" && success) { %>
      <div class="form-alert success"><%= success %></div>
      <% } %>

      <div class="grid">
        <label>
          Prénom
          <input
            type="text"
            name="first_name"
            value="<%= formData.first_name || '' %>"
            placeholder="Entrez votre prénom"
            required
          />
        </label>
        <label>
          Nom
          <input
            type="text"
            name="last_name"
            value="<%= formData.last_name || '' %>"
            placeholder="Entrez votre nom"
            required
          />
        </label>
      </div>

      <label>
        Email
        <input
          type="email"
          name="email"
          value="<%= formData.email || '' %>"
          placeholder="ex: nom@mail.com"
          required
        />
      </label>

      <label>
        Téléphone
        <input
          type="tel"
          name="phone"
          value="<%= formData.phone || '' %>"
          placeholder="Ex : +33 6 00 00 00 00"
          required
        />
      </label>

      <label>
        Mot de passe
        <input
          type="password"
          name="password"
          placeholder="Entrez votre mot de passe"
          required
        />
      </label>

      <label>
        Confirmer le mot de passe
        <input
          type="password"
          name="password_confirm"
          placeholder="Confirmez votre mot de passe"
          required
        />
      </label>

      <button type="submit" class="btn-primary">Créer mon compte</button>
    </form>

    <p class="signup-footer">
      Déjà un compte ? <a href="/login">Se connecter</a>
    </p>
  </div>
</section>
